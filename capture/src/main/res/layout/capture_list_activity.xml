<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <com.roy.capture.widget.CaptureTitleBarView
            android:id="@+id/ctv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/v"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            app:layout_constraintTop_toBottomOf="@id/ctv_title" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rl_capture"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v" />


        <com.roy.capture.ui.widget.materialsearchbar.MaterialSearchBar
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/ctv_title"
            app:mt_hint="搜索"
            app:mt_hintColor="@color/material_grey"
            app:mt_maxSuggestionsCount="5"
            app:mt_navIconEnabled="false"
            app:mt_placeholder="搜索"
            app:mt_placeholderColor="@color/material_grey"
            app:mt_roundedSearchBarEnabled="true"
            app:mt_searchBarColor="#F4F5F6"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>