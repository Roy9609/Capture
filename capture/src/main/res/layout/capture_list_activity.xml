<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <com.roy.capturelib.widget.CaptureTitleBarView
        android:id="@+id/ctv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />



    <com.roy.capture.ui.widget.materialsearchbar.MaterialSearchBar
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:mt_navIconEnabled="false"
        app:mt_placeholder="搜索"
        app:mt_hint="搜索"
        app:mt_hintColor="@color/material_grey"
        app:mt_placeholderColor="@color/material_grey"
        app:mt_maxSuggestionsCount="5"
        app:mt_searchBarColor="#F4F5F6"
        app:mt_roundedSearchBarEnabled="true"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ctv_title"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rl_capture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchBar" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>